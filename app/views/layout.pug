doctype html
html
  head
    meta(name='viewport',content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/bootstrap/css/sb-admin-2.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    //Scripts needed for angular to work properly.  
    script(src='/angular/angular.js')
    script.
      var myApp = angular.module('myApp', []);
      
    script(src='/angular/config.js')
    script(src='/angular/services.js')
    script(src='/angular/controllers.js')
    
  body.overflow-auto.min-vh-25(ng-app='myApp')
    block header
      header(class='header navbar navbar-fixed-top bg-dark text-light container-fluid')
        h1= title
    div.overflow-auto.min-vh-25.h-100
      block content
    block footer
      footer(class='page-footer font-small bg-dark text-light sticky-bottom')
        hsmall(class='float-right small-padding') &copy; Lucas Andrade, 2018


