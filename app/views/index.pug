extends layout

block content
  container(class=['container-fluid','row','full-height'].join(' '))
    container(class=['container-fluid','col-lg-3','col-md-4','col-sm-6','col-xm-12','border','border-dark','full-height'].join(' '))
      h1= title
      h2 Welcome to #{title}
    container(class=['container-fluid','col-lg-9','col-md-8','col-sm-6','col-xm-12','border','border-left-0','border-dark','full-height'].join(' '))
      ul(class=['nav','nav-tabs','nav-justified','small-padding','full-width'].join(' '))
        li(class='border half-width active show')
          button(class='full-width btn' data-toggle='tab' href='#Login') Log in
        li(class='border half-width')
          button(class='full-width btn' data-toggle='tab' href='#Signup') Sign up
      div(class="tab-content")
        div#Login(class=["tab-pane","fade","active","show"].join(' '))
          h2 Log in
          include login.pug
        div#Signup(class=["tab-pane","fade"].join(' '))
          h2 Sign up
          include signup.pug


block header
  header(class=['header','navbar','navbar-fixed-top','bg-dark','text-light','container-fluid'].join(' '))
    h1= title
    include login.pug
